{
    "parser": "babel-eslint",
    "extends": "airbnb-base",
    "env": {
        "node": true,
        "es6": true,
        "mocha": true
    },
    "rules": {
        "no-console": "off",
        "no-await-in-loop": "off",
        "linebreak-style": 0,
        "max-len": 0,
        "comma-dangle": [
            "error",
            "never"
        ],
        "class-methods-use-this": "off"
    }
}